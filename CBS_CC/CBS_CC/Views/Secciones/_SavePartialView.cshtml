@model CBS_CC.Models.Seccion

@{
    ViewData["Title"] = "Create";
}
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalTitleLabel">@(((string)ViewData["Operacion"] == "Edit") ? "Modificando " : "Agregando ") seccion.</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Save">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="SeccionId" />
                    <div class="row">
                        <label asp-for="Descripcion" class="col-md-4 control-label"></label>
                        <input asp-for="Descripcion" class="col-md-8 form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" data-save="modal">Guardar</button>
            </div>
        </div>
    </div>
</div>