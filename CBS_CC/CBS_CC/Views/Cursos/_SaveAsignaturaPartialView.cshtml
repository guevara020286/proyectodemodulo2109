@model CBS_CC.Models.AsignaturaCurso

@{
    ViewData["Title"] = "Curso";
}
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalTitleLabel">@(((string)ViewData["Operacion"] == "Edit") ? "Modificando " : "Agregando ") Asignatura.</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="SaveAsignatura">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="AsignaturaCursoId" />
                    <div class="row">
                        <input type="hidden" id="CursoId" name="CursoId" value="@((int)ViewData["_CursoId"])" />
                        <h4 style="color:blue">Curso: @((string)ViewData["DescripcionCurso"])</h4>
                    </div>
                    <div class="row">
                        <label asp-for="AsignaturaId" class="col-md-4 control-label"></label>
                        <select asp-for="AsignaturaId" class="col-md-8 form-control" asp-items="ViewBag.AsignaturaId"></select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" data-save="modal">Guardar</button>
            </div>
        </div>
    </div>
</div>