@model CBS_CC.Models.Matricula

@{
    ViewData["Title"] = "Matricula";
}
<h4>@(((string)ViewData["Operacion"] == "Edit") ? "Modificando " : "Agregando ") Matricula.</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MatriculaId" />
            <div class="row">
                <div class="row col-md-6">
                    <label asp-for="Fecha" class="col-md-4 control-label"></label>
                    <input asp-for="Fecha" class="col-md-8 form-control" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
                <div class="row col-md-6">
                    <label asp-for="PeriodoLectivo" class="col-md-4 control-label"></label>
                    <input asp-for="PeriodoLectivo" class="col-md-8 form-control" />
                    <span asp-validation-for="PeriodoLectivo" class="text-danger"></span>
                </div>
            </div>
            <p />
            <div class="row">
                <div class="row col-md-6">
                    <label asp-for="EstudianteId" class="col-md-4 control-label"></label>
                    <select asp-for="EstudianteId" class="col-md-8 form-control" asp-items="ViewBag.EstudianteId"></select>
                </div>
                <div class="row col-md-6">
                    <label asp-for="CursoId" class="col-md-4 control-label"></label>
                    <select asp-for="CursoId" class="col-md-8 form-control" asp-items="ViewBag.CursoId"></select>
                </div>
            </div>
            <p />
            <div class="row">
                <div class="row col-md-6">
                    <label asp-for="SeccionId" class="col-md-4 control-label"></label>
                    <select asp-for="SeccionId" class="col-md-8 form-control" asp-items="ViewBag.SeccionId"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
