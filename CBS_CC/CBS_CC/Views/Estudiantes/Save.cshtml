@model CBS_CC.Models.Estudiante

@{
    ViewData["Title"] = "Estudiante";
    var sexo = "";
    if (Model != null)
    {
        sexo = Model.Sexo;
    }
}
<h4>@(((string)ViewData["Operacion"] == "Edit") ? "Modificando " : "Agregando ") Estudiante</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Save">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EstudianteId" />
            <div class="row">
                <div class="row col-md-6">
                    <label asp-for="CarnetNo" class="col-md-4 control-label"></label>
                    <input asp-for="CarnetNo" class="col-md-8 form-control" />
                    <span asp-validation-for="CarnetNo" class="text-danger"></span>
                </div>
                <div class="row col-md-6">
                    <label asp-for="CodigoMINED" class="col-md-4 control-label"></label>
                    <input asp-for="CodigoMINED" class="col-md-8 form-control" />
                    <span asp-validation-for="CodigoMINED" class="text-danger"></span>
                </div>
            </div>
            <p />
            <div class="row">
                <div class="row col-md-6">
                    <label asp-for="NombreCompleto" class="col-md-4 control-label"></label>
                    <input asp-for="NombreCompleto" class="col-md-8 form-control" />
                    <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                </div>
                <div class="row col-md-6">
                    <label asp-for="FechaNacimiento" class="col-md-4 control-label"></label>
                    <input asp-for="FechaNacimiento" class="col-md-8 form-control" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>
            </div>
            <p />
            <div class="row">
                <div class="row col-md-6">
                    <label asp-for="Edad" class="col-md-4 control-label"></label>
                    <input asp-for="Edad" class="col-md-8 form-control" />
                    <span asp-validation-for="Edad" class="text-danger"></span>
                </div>
                <div class="row col-md-6">
                    <label asp-for="Sexo" class="col-md-4 control-label"></label>
                    <select id="Sexo" name="Sexo" class="col-md-8 form-control">
                        <option value="Masculino">Masculino</option>
                        <option value="Femenino">Femenino</option>
                    </select>
                </div>
            </div>
            <p />
            <div class="row col-md-12">
                <label asp-for="Direccion" class="col-md-2 control-label"></label>
                <input asp-for="Direccion" class="col-md-10 form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <p />
            <div class="row">
                <div class="row col-md-6">
                    <label asp-for="Responsable" class="col-md-4 control-label"></label>
                    <input asp-for="Responsable" class="col-md-8 form-control" />
                    <span asp-validation-for="Responsable" class="text-danger"></span>
                </div>
                <div class="row col-md-6">
                    <label asp-for="Telefono" class="col-md-4 control-label"></label>
                    <input asp-for="Telefono" class="col-md-8 form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
            </div>
            <p />
            <div class="row">
                <div class="row col-md-6">
                    <label asp-for="EstudianteEstadoId" class="col-md-4 control-label"></label>
                    <select asp-for="EstudianteEstadoId" class="col-md-8 form-control" asp-items="ViewBag.EstudianteEstadoId"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>
<script>
    document.getElementById("Sexo").value = '@sexo';
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
